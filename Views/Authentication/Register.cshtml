@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="flex min-h-screen items-center justify-center bg-gray-100">
    <div class="w-full max-w-md rounded-lg bg-white p-6 shadow-md">
        <h2 class="mb-6 text-center text-2xl font-bold text-gray-800">Register</h2>

        <form asp-action="Register" asp-controller="Authentication" method="post" class="space-y-4">
            <div>
                <label asp-for="Name" class="block text-sm font-medium text-gray-700">Full Name</label>
                <input asp-for="Name" class="mt-1 block w-full rounded-md border border-gray-300 px-4 py-2 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required />
                <span asp-validation-for="Name" class="text-sm text-red-500"></span>
            </div>

            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email Address</label>
                <input asp-for="Email" type="email" class="mt-1 block w-full rounded-md border border-gray-300 px-4 py-2 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required />
                <span asp-validation-for="Email" class="text-sm text-red-500"></span>
            </div>

            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700">Password</label>
                <input asp-for="Password" type="password" class="mt-1 block w-full rounded-md border border-gray-300 px-4 py-2 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required />
                <span asp-validation-for="Password" class="text-sm text-red-500"></span>
            </div>

            <div>
                <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="mt-1 block w-full rounded-md border border-gray-300 px-4 py-2 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required />
                <span asp-validation-for="ConfirmPassword" class="text-sm text-red-500"></span>
            </div>

            <button type="submit"
                    class="w-full rounded-md bg-blue-500 px-4 py-2 text-white hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                Register
            </button>
        </form>

        <p class="mt-6 text-center text-sm text-gray-600">
            Already have an account?
            <a asp-action="Login" asp-controller="Authentication" class="text-blue-500 hover:underline" title="Click to log in">Login here</a>
        </p>
    </div>
</div>
