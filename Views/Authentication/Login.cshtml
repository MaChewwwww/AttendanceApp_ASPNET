@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="flex min-h-screen items-center justify-center bg-gray-100">
    <div class="w-full max-w-md rounded-lg bg-white p-8 shadow-lg">
        <h2 class="mb-6 text-center text-3xl font-extrabold text-gray-900">Sign in to your account</h2>

        <form asp-action="Login" asp-controller="Authentication" method="post" class="space-y-6">
            @Html.AntiForgeryToken()

            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="rounded-md bg-red-100 p-3 text-sm text-red-500"></div>

            <!-- Email Input -->
            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email Address</label>
                <input asp-for="Email" type="email" 
                       class="mt-1 block w-full rounded-md border border-gray-300 px-4 py-2 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" 
                       placeholder="Enter your email" required />
                <span asp-validation-for="Email" class="text-sm text-red-500"></span>
            </div>

            <!-- Password Input -->
            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700">Password</label>
                <input asp-for="Password" type="password" 
                       class="mt-1 block w-full rounded-md border border-gray-300 px-4 py-2 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" 
                       placeholder="Enter your password" required />
                <span asp-validation-for="Password" class="text-sm text-red-500"></span>
            </div>

            <!-- Submit Button -->
            <button type="submit"
                    class="w-full rounded-md bg-blue-600 px-4 py-2 font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                Login
            </button>
        </form>

        <!-- Additional Links -->
        <p class="mt-6 text-center text-sm text-gray-600">
            Don't have an account? 
            <a asp-action="Register" asp-controller="Authentication" class="text-blue-500 hover:underline">Register here</a>
        </p>

        <p class="mt-2 text-center text-sm text-gray-600">
            <a href="#" class="text-blue-500 hover:underline">Forgot your password?</a>
        </p>
    </div>
</div>
