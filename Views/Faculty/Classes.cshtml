@{
    ViewData["Title"] = "Manage Courses";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <!-- Header -->
        <div class="col-12 mb-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0">Manage Courses</h1>
                    <p class="text-muted">View and manage your assigned courses</p>
                </div>
            </div>
        </div>
        
        <!-- Course Management Card -->
        <div class="col-12 mb-4">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Your Courses</h5>
                        <button class="btn btn-primary btn-sm">
                            <i class="fas fa-plus mr-2"></i>Add Course
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Course Code</th>
                                    <th>Course Name</th>
                                    <th>Schedule</th>
                                    <th>Students</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Sample data - Replace with actual data -->
                                <tr>
                                    <td>CS101</td>
                                    <td>Introduction to Computing</td>
                                    <td>MWF 9:00-10:30 AM</td>
                                    <td>30/35</td>
                                    <td><span class="badge bg-success">Active</span></td>
                                    <td>
                                        <button class="btn btn-sm btn-info mr-2">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>