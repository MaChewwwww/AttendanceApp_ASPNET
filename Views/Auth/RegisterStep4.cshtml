<script>
document.addEventListener('DOMContentLoaded', function() {
    // Clear all registration data since registration is complete
    sessionStorage.removeItem('registrationData');
    sessionStorage.removeItem('otpId');
    sessionStorage.removeItem('faceImage');
    localStorage.removeItem('otpCooldownEnd');
    
    // Set completion flag
    localStorage.setItem('registrationCompleted', 'true');
    
    // Go to login button
    document.getElementById('goToLoginBtn').addEventListener('click', function() {
        // Simple transition to login without success message
        setTimeout(() => {
            // Try to access layout functions
            if (typeof window.showLogin === 'function') {
                window.showLogin();
            } else if (window.parent && typeof window.parent.showLogin === 'function') {
                window.parent.showLogin();
            } else {
                // Fallback - click login tab directly
                const loginTab = document.getElementById('loginTab') || 
                                parent.document?.getElementById('loginTab') ||
                                window.parent?.document?.getElementById('loginTab');
                
                if (loginTab) {
                    loginTab.click();
                } else {
                    // Ultimate fallback
                    window.location.href = '/Auth/Login';
                }
            }
        }, 100);
    });
    
    // Back to register button - starts fresh registration
    document.getElementById('backToRegisterBtn').addEventListener('click', function() {
        // Clear completion flag and redirect to fresh registration
        localStorage.removeItem('registrationCompleted');
        
        // Navigate to register step 1
        window.location.href = '/Auth/Register';
    });
    
    // Auto-scroll to top
    setTimeout(() => {
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }, 100);
    
    console.log('Registration completion page loaded successfully');
});
</script>
