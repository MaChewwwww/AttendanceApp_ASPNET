<!-- Student Onboarding Modal - TOP LEVEL, OUTSIDE DASHBOARD CONTAINER -->
<div id="onboardingModal" class="fixed inset-0 bg-gray-900 bg-opacity-75 overflow-y-auto h-full w-full z-[9999] hidden flex items-center justify-center" style="backdrop-filter: blur(8px);">
    <div id="onboardingModalContent" class="relative mx-auto p-8 border w-full max-w-2xl shadow-2xl rounded-xl bg-white transform transition-all duration-500 scale-95 opacity-0 max-h-[90vh] overflow-y-auto">
        <!-- Modal Header -->
        <div class="text-center mb-8">
            <div class="mx-auto w-20 h-20 bg-blue-600 rounded-full flex items-center justify-center mb-6 transform transition-transform duration-700 scale-0" id="modalIcon">
                <i class="fas fa-graduation-cap text-white text-2xl"></i>
            </div>
            <h3 class="text-2xl font-bold text-gray-800 mb-3 transform transition-all duration-500 translate-y-4 opacity-0" id="modalTitle">Complete Your Account Setup</h3>
            <p class="text-gray-600 text-base transform transition-all duration-500 translate-y-4 opacity-0" id="modalDescription">
                Please select your program and section to complete your enrollment and access all features.
            </p>
        </div>

        <!-- Onboarding Form -->
        <form id="onboardingForm" class="space-y-6 transform transition-all duration-500 translate-y-6 opacity-0">
            <!-- Program Selection -->
            <div class="transform transition-all duration-500 translate-x-4 opacity-0" style="animation-delay: 0.3s" id="programSection">
                <label for="programSelect" class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="fas fa-book mr-2 text-blue-600"></i>
                    Select Your Program *
                </label>
                <select id="programSelect" name="program" required 
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors bg-white">
                    <option value="">Choose your program...</option>
                    <option value="bscs">Bachelor of Science in Computer Science (BSCS)</option>
                    <option value="bsit">Bachelor of Science in Information Technology (BSIT)</option>
                    <option value="bsce">Bachelor of Science in Computer Engineering (BSCpE)</option>
                    <option value="bsis">Bachelor of Science in Information Systems (BSIS)</option>
                    <option value="bsee">Bachelor of Science in Electronics Engineering (BSEE)</option>
                    <option value="bsme">Bachelor of Science in Mechanical Engineering (BSME)</option>
                    <option value="bsce-civil">Bachelor of Science in Civil Engineering (BSCE)</option>
                    <option value="bsba">Bachelor of Science in Business Administration (BSBA)</option>
                    <option value="bsed">Bachelor of Secondary Education (BSEd)</option>
                    <option value="beed">Bachelor of Elementary Education (BEEd)</option>
                </select>
                <div id="programError" class="hidden mt-2 text-sm text-red-600">
                    <i class="fas fa-exclamation-circle mr-1"></i>
                    Please select your program.
                </div>
            </div>

            <!-- Section Selection -->
            <div class="transform transition-all duration-500 translate-x-4 opacity-0" style="animation-delay: 0.4s" id="sectionSelectionDiv">
                <label for="sectionSelect" class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="fas fa-users mr-2 text-blue-600"></i>
                    Select Your Section *
                </label>
                <select id="sectionSelect" name="section" required disabled
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors bg-gray-100 disabled:bg-gray-100 disabled:cursor-not-allowed">
                    <option value="">First, select your program...</option>
                </select>
                <div id="sectionError" class="hidden mt-2 text-sm text-red-600">
                    <i class="fas fa-exclamation-circle mr-1"></i>
                    Please select your section.
                </div>
                <div id="sectionLoading" class="hidden mt-2 text-sm text-blue-600">
                    <i class="fas fa-spinner fa-spin mr-1"></i>
                    Loading sections...
                </div>
            </div>

            <!-- Courses Selection -->
            <div id="coursesContainer" class="hidden transform transition-all duration-500 translate-x-4 opacity-0" style="animation-delay: 0.5s">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="fas fa-book-open mr-2 text-blue-600"></i>
                    Available Courses
                </label>
                <div id="coursesList" class="space-y-3 max-h-48 overflow-y-auto border border-gray-200 rounded-lg p-4 bg-gray-50">
                    <!-- Courses will be populated dynamically -->
                </div>
                <div id="coursesLoading" class="hidden mt-2 text-sm text-blue-600">
                    <i class="fas fa-spinner fa-spin mr-1"></i>
                    Loading courses...
                </div>
                <p class="mt-2 text-xs text-gray-500">
                    These are the courses you'll be enrolled in for this section.
                </p>
            </div>

            <!-- Error Message -->
            <div id="onboardingError" class="hidden rounded-lg bg-red-50 border border-red-200 p-4 transform transition-all duration-300 scale-95 opacity-0">
                <div class="flex items-center">
                    <i class="fas fa-exclamation-triangle text-red-600 mr-3"></i>
                    <div>
                        <h4 class="text-red-800 font-medium">Setup Error</h4>
                        <p id="onboardingErrorText" class="text-red-700 text-sm mt-1"></p>
                    </div>
                </div>
            </div>

            <!-- Success Message -->
            <div id="onboardingSuccess" class="hidden rounded-lg bg-green-50 border border-green-200 p-4 transform transition-all duration-300 scale-95 opacity-0">
                <div class="flex items-center">
                    <i class="fas fa-check-circle text-green-600 mr-3"></i>
                    <div>
                        <h4 class="text-green-800 font-medium">Setup Complete!</h4>
                        <p class="text-green-700 text-sm mt-1">Your account has been successfully configured.</p>
                    </div>
                </div>
            </div>
        </form>

        <!-- Modal Buttons -->
        <div class="flex space-x-4 mt-8 transform transition-all duration-500 translate-y-4 opacity-0" id="modalButtons">
            <button type="button" onclick="closeOnboardingModal()" 
                    class="flex-1 bg-gray-300 text-gray-700 py-3 px-6 rounded-lg hover:bg-gray-400 transition-colors font-medium">
                <i class="fas fa-times mr-2"></i>
                Cancel
            </button>
            <button type="button" id="completeOnboardingBtn" onclick="completeOnboarding()" disabled
                    class="flex-1 bg-blue-600 text-white py-3 px-6 rounded-lg hover:bg-blue-700 transition-colors font-medium disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center">
                <span id="onboardingButtonText">
                    <i class="fas fa-check mr-2"></i>
                    Complete Setup
                </span>
                <svg id="onboardingSpinner" class="hidden w-5 h-5 text-white ml-2 animate-spin" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
            </button>
        </div>

        <!-- Info Section -->
        <div class="mt-6 p-4 bg-blue-50 rounded-lg border border-blue-200 transform transition-all duration-500 translate-y-4 opacity-0" id="infoSection">
            <div class="flex items-start">
                <i class="fas fa-info-circle text-blue-600 mr-3 mt-0.5"></i>
                <div>
                    <h4 class="text-blue-800 font-medium text-sm">Important Information</h4>
                    <ul class="text-blue-700 text-xs mt-1 space-y-1">
                        <li>• Your program and section cannot be changed after setup</li>
                        <li>• Contact your instructor if you need to modify your enrollment</li>
                        <li>• All courses for your section will be automatically enrolled</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
