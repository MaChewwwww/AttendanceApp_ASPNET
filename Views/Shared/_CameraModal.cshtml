<div id="cameraModal" class="fixed inset-0 z-50 flex hidden items-center justify-center bg-gray-800 bg-opacity-75">
    <div class="w-11/12 max-w-md rounded-lg bg-white shadow-lg">
        <div class="flex items-center justify-between border-b p-4">
            <h3 class="text-lg font-semibold text-gray-800">Capture Face Image</h3>
            <button id="closeCameraModal" class="text-gray-500 hover:text-gray-700">
                &times;
            </button>
        </div>
        <div class="p-4">
            <video id="cameraStream" autoplay class="w-full rounded-md"></video>
            <button id="captureButton" class="mt-4 w-full rounded-md bg-blue-600 px-4 py-2 text-white hover:bg-blue-700">
                Capture
            </button>
        </div>
    </div>
</div>

<script>
    const cameraModal = document.getElementById("cameraModal");
    const closeCameraModal = document.getElementById("closeCameraModal");
    const captureButton = document.getElementById("captureButton");
    const cameraStream = document.getElementById("cameraStream");

    let videoStream;

    // Open the camera modal
    function openCameraModal() {
        cameraModal.classList.remove("hidden");
        navigator.mediaDevices
            .getUserMedia({ video: true })
            .then((stream) => {
                videoStream = stream;
                cameraStream.srcObject = stream;
            })
            .catch((err) => {
                alert("Unable to access camera: " + err.message);
            });
    }

    // Close the camera modal
    function closeModal() {
        cameraModal.classList.add("hidden");
        if (videoStream) {
            videoStream.getTracks().forEach((track) => track.stop());
        }
    }

    // Capture the image
    captureButton.addEventListener("click", () => {
        const canvas = document.createElement("canvas");
        canvas.width = cameraStream.videoWidth;
        canvas.height = cameraStream.videoHeight;
        const context = canvas.getContext("2d");
        context.drawImage(cameraStream, 0, 0, canvas.width, canvas.height);

        // Convert the image to base64
        const faceImage = canvas.toDataURL("image/png");

        // Set the hidden input value to the captured image
        const faceImageInput = document.getElementById("faceImageInput");
        faceImageInput.value = faceImage;

        // Close the modal
        closeModal();
    });

    // Close modal on button click
    closeCameraModal.addEventListener("click", closeModal);
</script>
